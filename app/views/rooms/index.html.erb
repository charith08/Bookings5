<p id="notice"><%= notice %></p>

<% if (@rooms.count  === 0) %>

<%else %>
<h1>Rooms</h1>

<table>
  <thead>
    <tr>

      <th>Name</th>
      <th>Capacity</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.capacity %></td>

        <% if is_admin? %>
        <td><%= link_to 'Edit room', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td><%= link_to 'Open/Book this room', room %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>
<% if is_admin? %>
  <%= link_to 'Create a New Room', new_room_path %>
<% else %>

<% end %>
